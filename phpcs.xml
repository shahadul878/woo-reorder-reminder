<?xml version="1.0"?>
<ruleset name="Easy Re-Order Reminder for WooCommerce">
	<description>PHPCS configuration for Easy Re-Order Reminder for WooCommerce plugin - WordPress compatible

	This configuration uses PSR12 as a base but excludes rules that conflict with WordPress coding standards.
	The plugin follows WordPress conventions:
	- Tabs for indentation
	- Underscore naming for classes (WRR_Plugin) and methods (get_settings)
	- No namespaces (common in WordPress plugins)
	- Opening braces on same line (WordPress style)
	- Proper escaping functions (esc_html, esc_attr, esc_url, etc.)
	
	Note: Full WordPress Coding Standards (WPCS) require PHPCSUtils dependency.
	This configuration provides WordPress-compatible checks without additional dependencies.
	</description>

	<!-- What to scan -->
	<file>woo-reorder-reminder.php</file>
	<file>includes/</file>
	<file>templates/</file>

	<!-- How to scan -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/languages/*</exclude-pattern>
	<exclude-pattern>*/assets/*</exclude-pattern>

	<!-- Use PSR12 as base but exclude WordPress-specific violations -->
	<rule ref="PSR12">
		<!-- Allow tabs for indentation (WordPress standard) -->
		<exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
		
		<!-- Allow underscores in class names (WordPress convention: WRR_Plugin) -->
		<exclude name="Squiz.Classes.ValidClassName.NotCamelCaps"/>
		
		<!-- Allow underscores in method names (WordPress convention: get_settings, process_reminders) -->
		<exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps"/>
		
		<!-- Allow no namespaces (common in WordPress plugins) -->
		<exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
		
		<!-- Allow side effects with symbols (WordPress pattern) -->
		<exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>
		
		<!-- Allow opening braces on same line (WordPress style) -->
		<exclude name="PSR2.Classes.ClassDeclaration.OpenBraceNewLine"/>
		<exclude name="PSR12.Classes.OpeningBraceSpace.Found"/>
		
		<!-- Allow function opening braces on same line -->
		<exclude name="PSR2.Methods.FunctionClosingBrace.SpacingBeforeClose"/>
		
		<!-- More lenient line length for WordPress (120 chars is common) -->
		<exclude name="Generic.Files.LineLength"/>
	</rule>

	<!-- Report width for better readability -->
	<arg name="report-width" value="120"/>
	
	<!-- Show sniff codes in all reports -->
	<arg value="sp"/>
</ruleset>
